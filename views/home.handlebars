<h1 class="home-title">User Homepage</h1>

<div class="row home-row">

  {{!-- This is the left column to auto populate the 10 most recent posts for your area --}}
  <div class="col s4">
    <h3>Most Recent Top 10 Posts in Your Area</h3>
    {{#each userfeed}}
    <h5>{{userfeed.body}}</h5>
    {{/each}}
    <div class="comment">
      {{!-- <h2>{{recent.title}}</h2>
      {{recent.body}} --}}
    </div>
  </div>

  {{!-- This the the middle column for searching for other people's posts --}}
  <div class="col s4">
    <h3>Search Posts</h3>
    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger float-right" href="#modal1">Search</a>

    <!-- Modal Structure -->
    <div id="modal2" class="modal modal-fixed-footer">
      <div class="modal-content">
        {{!-- form goes here --}}
        <div class="input-field col s12">
          <select>
            <option value="">Choose your Category</option>
            <option value="event">Event</option>
            <option value="free">Free</option>
            <option value="report">Report (Roadwork, Suspicious Activity, etc)</option>
            <option value="sale">For Sale/Service Offered</option>
            <option value="missed">Missed Connections</option>
          </select>
          <label>Category Select</label>
        </div>

        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Zipcode To Search</label>
              </div>
            </div>
          </form>
        </div>

        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Keywords (Optional)</label>
              </div>
            </div>
          </form>
        </div>

      </div>

      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Submit</a>
      </div>
    </div>
  </div>

  {{!-- This is the right column that will include the modal for posting your own content and all your own posts --}}
  <div class="col s4">
    <h3>Your Posts</h3>
    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger float-right" href="#modal1">Edit/New Post</a>

    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
      <div class="modal-content">
        {{!-- form goes here --}}
        <div class="input-field col s12">
          <select>
            <option value="">Choose your Category</option>
            <option value="event">Event</option>
            <option value="free">Free</option>
            <option value="report">Report (Roadwork, Suspicious Activity, etc)</option>
            <option value="sale">For Sale/Service Offered</option>
            <option value="missed">Missed Connections</option>
          </select>
          <label>Category Select</label>
        </div>

        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Title</label>
              </div>
            </div>
          </form>
        </div>

        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Add details about your post</label>
              </div>
            </div>
          </form>
        </div>

      </div>

      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Submit</a>
      </div>
    </div>
  </div>

</div>