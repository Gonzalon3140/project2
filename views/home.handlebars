<h1 class="home-title">{{stuff.name}}'s Hood</h1>
<form action="/logout" method="get">
<input type="submit" class="btn secondary-btn" id="logoutbtn" value="Logout">
</form>
<h2>Feed For{{stuff.zip}}</h2>
<div class="row home-row">

  {{!-- This is the left column to auto populate the 10 most recent posts for your area --}}
  <div class="col s4">
    <h3>Most Recent Top 10 Posts in Your Area</h3>
    <ul>
      {{#each stuff}}
      <li>
      <span>Title: {{title}}</span>
      <span style="float:right">In: "{{category}}"</span>
      <p style="color:white">{{body}}<p>
      </li>
      {{/each}}
    </ul>
  </div>

  {{!-- This the the middle column for searching for other people's posts --}}
  <div class="col s4">
    <h3>Search Posts</h3>
    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger float-right" href="#modal1">Search</a>

    <!-- Modal Structure -->
    <div id="modal2" class="modal modal-fixed-footer">
      <div class="modal-content">
        {{!-- form goes here --}}
        <div class="input-field col s12">
          <select>
            <option value="">Choose your Category</option>
            <option value="event">Event</option>
            <option value="free">Free</option>
            <option value="report">Report (Roadwork, Suspicious Activity, etc)</option>
            <option value="sale">For Sale/Service Offered</option>
            <option value="missed">Missed Connections</option>
          </select>
          <label>Category Select</label>
        </div>

        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Zipcode To Search</label>
              </div>
            </div>
          </form>
        </div>

        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Keywords (Optional)</label>
              </div>
            </div>
          </form>
        </div>

      </div>

      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Submit</a>
      </div>
    </div>
  </div>

  {{!-- This is the right column that will include the modal for posting your own content and all your own posts --}}
  <div class="col s4">
    <h3>Your Posts</h3>
    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger float-right" href="#modal1">Edit/New Post</a>

    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
      <div class="modal-content">
        <form class="col s12" method="post" action="/api/post">{{!-- form goes here --}}
          <div class="input-field col s12">
            <select name="category">
              <option value="">Choose your Category</option>
              <option value="Event">Event</option>
              <option value="Free">Free</option>
              <option value="Report">Report (Roadwork, Suspicious Activity, etc)</option>
              <option value="Sale">For Sale/Service Offered</option>
              <option value="Missed">Missed Connections</option>
            </select>
            <label>Category Select</label>
          </div>
          {{!-- <div class="row">
            <div class="row"> --}}
              <div class="input-field col s12">
                <label for="textarea1">Title</label>
                <input name="title" type="text" id="textarea1" class="materialize-input">
              </div>
            {{!-- </div>
          </div> --}}
          {{!-- <div class="row">
            <div class="row"> --}}
              <div class="input-field col s12">
                <textarea type="text" name="body" id="textarea1" class="materialize-input"></textarea>
                <label for="textarea1">Add details about your post</label>
              </div>
            {{!-- </div>
          </div> --}}
          <div class="modal-footer">
            <input type="submit" class="modal-close waves-effect waves-green btn-flat" value="Submit">
          </div>
        </form>
    </div>
  </div>

</div>